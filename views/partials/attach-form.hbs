<div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-4">
    <div>
        <label for="attach-item-id" class="block text-sm font-medium text-gray-700 mb-1">Item ID</label>
        <input type="text" id="attach-item-id" placeholder="e.g., MANGA-DEMO-1" 
               class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
        <p class="mt-1 text-xs text-gray-500">Enter a single item ID or comma-separated list</p>
    </div>
    <div>
        <label for="attach-user-id" class="block text-sm font-medium text-gray-700 mb-1">User ID</label>
        <input type="text" id="attach-user-id" 
               class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
    </div>
    <div>
        <label for="attach-session-id" class="block text-sm font-medium text-gray-700 mb-1">Session ID</label>
        <input type="text" id="attach-session-id" 
               class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
    </div>
</div>
<div class="flex justify-between">
    <button id="attach-item-btn" class="px-4 py-2 bg-blue-600 text-white font-medium rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-colors">
        Attach Item
    </button>
    <button id="submit-btn" class="px-4 py-2 bg-green-600 text-white font-medium rounded-md hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2 transition-colors">
        Submit Grading
    </button>
</div>