<div id="attach-config-content" class="mt-2">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
        <div>
            <label for="items" class="block text-xs font-medium text-gray-700 mb-1">Item ID</label>
            <input type="text" id="items" placeholder="e.g., MANGA-DEMO-1" 
                   class="w-full px-2 py-1.5 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-1 focus:ring-blue-500 focus:border-blue-500">
            <p class="mt-1 text-xs text-gray-500">Enter a single item ID or comma-separated list</p>
        </div>
        <div>
            <label for="student-id" class="block text-xs font-medium text-gray-700 mb-1">User ID</label>
            <input type="text" id="student-id" 
                   class="w-full px-2 py-1.5 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-1 focus:ring-blue-500 focus:border-blue-500">
        </div>
        <div>
            <label for="assess-session-id" class="block text-xs font-medium text-gray-700 mb-1">Session ID</label>
            <input type="text" id="assess-session-id" 
                   class="w-full px-2 py-1.5 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-1 focus:ring-blue-500 focus:border-blue-500">
        </div>
    </div>
    <div class="flex justify-between">
        <button id="attach-item-btn" class="px-3 py-2 bg-blue-600 text-white font-medium rounded-md hover:bg-blue-700 focus:outline-none focus:ring-1 focus:ring-blue-500 focus:ring-offset-1 transition-colors text-md">
            Attach Item
        </button>
        <button id="submit-btn" class="px-3 py-2 bg-green-600 text-white font-medium rounded-md hover:bg-green-700 focus:outline-none focus:ring-1 focus:ring-green-500 focus:ring-offset-1 transition-colors text-md">
            Save Grading
        </button>
    </div>
</div>
