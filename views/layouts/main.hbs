<!DOCTYPE html>
<html lang="en">
{{> header title="Learnosity Grading Demo"}}
<body class="bg-gray-100 min-h-screen py-2">

    {{> notification}}

    <div class="max-w-4xl mx-auto">
        <h1 class="text-3xl font-bold text-center mb-4">Learnosity Grading</h1>
        
        <!-- Configuration Panel -->
        <div class="bg-white rounded-lg shadow-md p-4 mb-6">
            <div class="panel-header" id="config-header">
                <h2 class="text-lg font-semibold text-gray-700">Configuration</h2>
                <button id="toggle-config-btn" class="toggle-btn" data-target="#config-content">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                    </svg>
                </button>
            </div>
            {{> config-form}}
        </div>
        
        <div id="manual-grading" class="max-w-4xl mx-auto mb-4">
            <!-- Attach Items Panel -->
            <div class="bg-white rounded-lg shadow-lg p-4 mb-4">
                <div class="panel-header" id="attach-header">
                    <h2 class="text-lg font-semibold text-gray-700">Attach Items</h2>
                    <button id="toggle-attach-btn" class="toggle-btn" data-target="#attach-content">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                        </svg>
                    </button>
                </div>
                <div id="attach-content" class="mt-2">
                    {{> attach-form}}
                    <!-- Grading Items Panel -->
                    <div id="items-content">
                        {{> grading-items}}
                    </div>
                </div>
            </div>
            
            
        </div>
    </div>
</body>
</html>
